extends layout
block content
    h1= title
    div#login-body
        noscript
            #nojavascript
                div
                    | This page needs JavaScript. Please
                    a(href='http://enable-javascript.com/', target='_blank', rel='noreferrer') activate JavaScript
                    |  and reload.
        .content
            header#header
                h1 M113 - Project
            form#login-form(method='post', name='login')
                fieldset
                    p.groupTop
                        input#input-user(type='text', name='user', placeholder='User', value='', autofocus='', autocomplete='on', autocapitalize='off', autocorrect='off')
                        img#user-icon(src='img/user.svg', alt='')
                    p.groupBottom
                        input#input-password(type='password', name='password', value='', placeholder='Password', autocomplete='on', autocapitalize='off', autocorrect='off')
                        img#password-icon(src='img/password.svg', alt='')
                    input#login.login(type='submit', name='submit', value='login')
                    input#register.login(type='submit', name='submit', value='register')
                    input#anonymous.login(type='submit', name='submit', value='anonymous')
        footer
            p.info
                a(href='https://gitlab.homeset.de/fhKiel/M113', target='_blank', rel='noreferrer') M113 - Project
        script.
            window.onload = function() {
                document.getElementById("input-user").oninput = function() {
                    var inLength = document.getElementById("input-user").value.length;
                    if (inLength > 0)
                        console.log();
                }
            }


        script(src='/socket.io/socket.io.js')
    script(src='/js/libs/jquery-min.js')
    script(src='/js/login.js')